#!/bin/bash
#
#  $Header: /home/jahn/src/cvs2git/MITgcm/20170915-2/gcmpack-all-patch/MITgcm/tools/build_options/Attic/linux_ia32_ifc,v 1.5 2004/09/24 17:06:59 jmc Exp $
#  $Name:  $
#

FC=ifc
CC=gcc
DEFINES='-D_BYTESWAPIO -DWORDLENGTH=4'
CPP='cpp  -traditional -P'
LIBS='-lPEPCF90'
NOOPTFLAGS='-O0'

#  Note that the -mp switch is for ieee "maintain precision" and is
#  roughly equivalent to -ieee
if test "x$IEEE" = x ; then
    FOPTIM='-O3 -align'
#P3 FOPTIM=$FOPTIM' -tpp6 -xWKM'
#P4 FOPTIM=$FOPTIM' -tpp7 -xWKM'
    FFLAGS='-132 -r8 -i4 -w95 -W0 -WB'
else
#   FOPTIM='-O0 -noalign'
    FOPTIM='-O0 -noalign -CA -CB -CU -CV -CS'
    FFLAGS='-mp -132 -r8 -i4 -w95 -W0 -WB'
fi

NOOPTFILES='mdsio_byteswapr8.F mdsio_byteswapr4.F'
NOOPTFILES=$NOOPTFILES' mitcplr_char2real.F mitcplr_real2char.F'
NOOPTFILES=$NOOPTFILES' mitcplr_char2int.F mitcplr_int2char.F'

