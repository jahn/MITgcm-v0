#!/bin/bash
#
# tested on columbia using:
# module purge
# module load modules scsl.1.6.1.0 intel-comp.9.1.039 mpt.1.12.0.nas

CPP='/lib/cpp  -traditional -P'

#  Note that the -mp switch is for ieee "maintain precision" and is
#  roughly equivalent to -ieee
FFLAGS='-mp -132 -r8 -i4 -w95 -W0 -WB -convert big_endian -assume byterecl'

FOPTIM='-O3 -align'
LIBS='-L/opt/sgi/mpt/1.12.0.nas/lib -lmpi -L/u/edhill/pkg/netcdf-3.6.0/ifort/lib -lnetcdf'

FC=ifort

DEFINES='-DALLOW_USE_MPI -DALWAYS_USE_MPI -DWORDLENGTH=4'

INCLUDES='-I/opt/sgi/mpt/1.12.0.nas/include -I/u/edhill/pkg/netcdf-3.6.0/ifort/include'
INCLUDEDIRS='/opt/sgi/mpt/1.12.0.nas/include'
MPIINCLUDEDIR='/opt/sgi/mpt/1.12.0.nas/include'
MPI_HEADER_FILES='mpif.h mpiof.h mpif_parameters.h'
MPI_HEADER_FILES_INC='./mpi_headers/mpif.h ./mpi_headers/mpiof.h ./mpi_headers/mpif_parameters.h'
PAPIINC='-I/usr/local/include'
PAPILIB='-L/usr/local/lib -lpapi'
