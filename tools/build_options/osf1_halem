LN='ln -s'
S64='$(TOOLSDIR)/set64bitConst.sh'
MAKEDEPEND='mkdep -f depend.out'
DEFINES='-DTARGET_DEC -DWORDLENGTH=1'


CPP='/usr/bin/cpp -P'
#ph: makedepend not available on some/many DEC Alpha's; use mkdep instead
FC='f77'
